<h1>Editing Book</h1>

<form>
 <%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
<p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
<ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">  
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Update Book' %>
</div>
<% end %>
</form>

<%= link_to "Show", book_path(@book) %>
<%= link_to 'Back', books_path, class: "back" %>
